var fgImage = new SimpleImage ("drewRobert.png"); //Foreground Image
var bgImage = new SimpleImage ("dinos.png");  //Background Image
var output = new SimpleImage (fgImage.getWidth(), fgImage.getHeight()); //The image that will be modyfied

for(var pixel of fgImage.values()){ //loop to count the pixels
    if(pixel.getGreen() > pixel.getBlue() + pixel.getRed()){ //condition to check the green pixels
        
        var x = pixel.getX(); // getting X coordinates
        var y = pixel.getY(); // getting Y coordinates
        var bgPixel = bgImage.getPixel(x,y); // getting the color of the pixels in those coordinates
        output.setPixel(x,  y, bgPixel); // adding the pixels from the background image to the foreground image when its green
        
    } else {
      output.setPixel(pixel.getX(), pixel.getY(), pixel); // when its not green it is going to keep the same pixels of the foreground image
    }
}
print(output); printing the new image
